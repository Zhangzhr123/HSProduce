<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          android:versionCode="1"
          package="com.hsproduce">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <application
            android:name=".App"
            android:allowBackup="true"
            android:icon="@mipmap/logo"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:screenOrientation="portrait"
                android:name=".activity.MainActivity"
                android:label="@string/app_name"
                android:windowSoftInputMode="stateHidden"/>
        <activity
                android:screenOrientation="portrait"
                android:launchMode="singleInstance"
                android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:launchMode="singleInstance"
                android:name=".activity.FunctionActivity">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:launchMode="singleInstance"
                android:name=".activity.VulcanizationActivity">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:launchMode="singleInstance"
                android:name=".activity.BarcodeReplaceActivity">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:launchMode="singleInstance"
                android:name=".activity.BarcodeSupplementActivity">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:launchMode="singleInstance"
                android:name=".activity.DetailChangeActivity">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:launchMode="singleInstance"
                android:name=".activity.LoadFactoryActivity">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:launchMode="singleInstance"
                android:name=".activity.LoadScanningActivity">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:launchMode="singleInstance"
                android:name=".activity.SwitchPlanActivity">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:launchMode="singleInstance"
                android:name=".activity.CheckActivity">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:launchMode="singleInstance"
                android:name=".activity.FormingActivity">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:launchMode="singleInstance"
                android:name=".activity.FormingDetailChangeActivity">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:launchMode="singleInstance"
                android:name=".activity.FormingBarCodeActivity">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:launchMode="singleInstance"
                android:name=".activity.SwitchFormingActivity">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:launchMode="singleInstance"
                android:name=".activity.BarCodeDetailActivity">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:launchMode="singleInstance"
                android:name=".activity.SelectFormingPlanActivity">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:launchMode="singleInstance"
                android:name=".activity.DeleteFormingVreCordActivity">
        </activity>
    </application>

</manifest>
