<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
>
    <!-- 标题 功能菜单 -->
    <com.xuexiang.xui.widget.actionbar.TitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xui_btn_blue_normal_color"
            app:tb_barHeight="40dp"
            app:tb_dividerColor="@color/xui_config_color_red"
            app:tb_titleText="@string/Function">
    </com.xuexiang.xui.widget.actionbar.TitleBar>

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="硫化"
                android:textSize="25sp"
        />
        <View
                android:layout_height="1px"
                android:layout_width="350dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="35dp"
                android:background="@color/black_textview"/>
        <LinearLayout
                android:id="@+id/view1"
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:visibility="gone">
            <ImageButton
                    android:id="@+id/vplan"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/button_backgroud"
                    android:src="@drawable/btn_vplan"
                    android:visibility="visible"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="硫化生产①"
                    android:textSize="13sp"
            />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/view2"
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="40dp"
                android:visibility="gone">
            <ImageButton
                    android:id="@+id/barsup"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/orangered"
                    android:src="@drawable/btn_supp"
                    android:visibility="visible"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="条码补录②"
                    android:textSize="13sp"
            />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/view3"
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="40dp"
                android:visibility="gone">
            <ImageButton
                    android:id="@+id/barrep"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/orange"
                    android:src="@drawable/btn_repl"
                    android:visibility="visible"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="条码变更③"
                    android:textSize="13sp"
            />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/view4"
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="150dp"
                android:visibility="gone">
            <ImageButton
                    android:id="@+id/detch"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/yellow"
                    android:src="@drawable/btn_detial"
                    android:visibility="visible"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="明细变更④"
                    android:textSize="13sp"
            />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/view5"
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="150dp"
                android:visibility="gone">
            <ImageButton
                    style="@style/ButtonView.Blue"
                    android:id="@+id/repl"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/gray_pressed"
                    android:src="@drawable/btn_itnbrrepl"
                    android:visibility="visible"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="规格交替⑤"
                    android:textSize="13sp"
            />
        </LinearLayout>

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="250dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检测"
                android:textSize="25sp"
        />
            <View
                    android:layout_height="1px"
                    android:layout_width="350dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/black_textview"/>
            <LinearLayout
                    android:id="@+id/view6"
                    android:orientation="vertical"
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="50dp"
                    android:visibility="gone">
                <ImageButton
                        style="@style/ButtonView.Blue"
                        android:id="@+id/check"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@color/colorAccent"
                        android:src="@drawable/btn_check"
                        android:visibility="visible"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="检测⑥"
                        android:textSize="13sp"
                />
            </LinearLayout>

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="400dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出厂"
                android:textSize="25sp"
        />
            <View
                    android:layout_height="1px"
                    android:layout_width="350dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    android:background="@color/black_textview"/>
            <LinearLayout
                    android:id="@+id/view7"
                    android:orientation="vertical"
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="50dp"
                    android:visibility="gone">
                <ImageButton
                        style="@style/ButtonView.Blue"
                        android:id="@+id/load"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@color/burlywood"
                        android:src="@drawable/btn_vload"
                        android:visibility="visible"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="装车出厂⑦"
                        android:textSize="13sp"
                />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/view8"
                    android:orientation="vertical"
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="135dp"
                    android:layout_marginTop="50dp"
                    android:visibility="gone">
                <ImageButton
                        style="@style/ButtonView.Blue"
                        android:id="@+id/loadsc"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@color/plum"
                        android:src="@drawable/btn_loadscan"
                        android:visibility="visible"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退厂扫描⑧"
                        android:textSize="13sp"
                />
            </LinearLayout>
    </RelativeLayout>

    </RelativeLayout>
    </ScrollView>

</LinearLayout>