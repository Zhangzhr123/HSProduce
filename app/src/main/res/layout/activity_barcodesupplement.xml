<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
>
    <!-- 标题 条码补录 -->
    <com.xuexiang.xui.widget.actionbar.TitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xui_btn_blue_normal_color"
            app:tb_barHeight="40dp"
            app:tb_dividerColor="@color/xui_config_color_red"
            app:tb_titleText="@string/vul_barcode_supplement">
    </com.xuexiang.xui.widget.actionbar.TitleBar>

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:text="条码："
                        android:textSize="15sp"/>
                <!-- 条码扫描框 -->
                <com.xuexiang.xui.widget.edittext.ClearEditText
                        style="@style/EditText.Normal"
                        android:id="@+id/barcode"
                        android:layout_width="160dp"
                        android:layout_height="30dp"
                        android:hint="@string/vul_barcode_scan"
                        android:textAlignment="center"
                        android:layout_margin="5dp"/>
                <com.xuexiang.xui.widget.button.ButtonView
                        style="@style/ButtonView.Blue"
                        android:id="@+id/bt_in_plan"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:text="选择计划"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="0dp"/>
                <!-- 搜索按钮 -->
            </LinearLayout>
            <View
                    android:layout_height="1px"
                    android:layout_width="350dp"
                    android:layout_marginLeft="30dp"
                    android:background="@color/black_textview"
                    android:id="@+id/view"/>
            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="50dp"
                    android:layout_height="wrap_content">
                <TableRow android:layout_marginTop="0dp">
                    <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            android:text="规格"
                            android:textSize="15sp"/>
                    <com.xuexiang.xui.widget.edittext.ClearEditText
                            style="@style/EditText.Normal"
                            android:id="@+id/spesc"
                            android:layout_width="160dp"
                            android:layout_height="30dp"
                            android:hint="请输入规格"
                            android:textAlignment="center"
                            android:layout_margin="5dp"/>
                    <com.xuexiang.xui.widget.button.ButtonView
                            style="@style/ButtonView.Blue"
                            android:id="@+id/getitnbr"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:text="选择规格"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="0dp"
                            android:visibility="visible"/>
                </TableRow>
                <TableRow android:layout_marginTop="5dp">
                    <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            android:text="规格名称"
                            android:textSize="15sp"/>
                    <com.xuexiang.xui.widget.edittext.ClearEditText
                            style="@style/EditText.Normal"
                            android:id="@+id/spescname"
                            android:layout_width="160dp"
                            android:layout_height="30dp"
                            android:hint="请输入规格名称"
                            android:textAlignment="center"
                            android:layout_margin="5dp"/>
                </TableRow>
                <TableRow android:layout_marginTop="5dp">
                    <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            android:text="机台"
                            android:textSize="15sp"/>
                    <com.xuexiang.xui.widget.edittext.ClearEditText
                            style="@style/EditText.Normal"
                            android:id="@+id/mchid"
                            android:layout_width="160dp"
                            android:layout_height="30dp"
                            android:hint="请输入规格名称"
                            android:textAlignment="center"
                            android:layout_margin="5dp"/>
                    <com.xuexiang.xui.widget.button.ButtonView
                            style="@style/ButtonView.Blue"
                            android:id="@+id/getmchid"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:text="选择机台"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="0dp"
                            android:visibility="visible"/>
                </TableRow>
                <TableRow android:layout_marginTop="5dp">
                    <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:text="日期"
                            android:textSize="15sp"/>
                    <TextView
                            android:background="@drawable/edit_background"
                            android:id="@+id/date"
                            android:layout_width="160dp"
                            android:layout_height="30dp"
                            android:hint="YYYY-MM-DD"
                            android:textAlignment="center"
                            android:layout_margin="5dp"/>
                </TableRow>
                <TableRow android:layout_marginTop="10dp">
                    <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="5dp"
                            android:text="LorR"
                            android:textSize="15sp"/>
                    <Spinner
                            android:id="@+id/LorR"
                            android:layout_width="160dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:textAlignment="center"
                            android:background="@drawable/edit_background"
                            android:spinnerMode="dialog"
                            android:entries="@array/lr"
                    />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">
                    <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="5dp"
                            android:text="班次"
                            android:textSize="15sp"/>
                    <Spinner
                            android:id="@+id/shift"
                            android:layout_width="160dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:textAlignment="center"
                            android:background="@drawable/edit_background"
                            android:spinnerMode="dialog"
                            android:entries="@array/shift"
                    />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">
                    <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="5dp"
                            android:text="班组"
                            android:textSize="15sp"/>
                    <Spinner
                            android:id="@+id/team"
                            android:layout_width="160dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:textAlignment="center"
                            android:background="@drawable/edit_background"
                            android:spinnerMode="dialog"
                            android:visibility="visible"/>
                </TableRow>
                <TableRow android:layout_marginTop="10dp">
                    <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            android:text="主手"
                            android:textSize="15sp"/>
                    <com.xuexiang.xui.widget.edittext.ClearEditText
                            style="@style/EditText.Normal"
                            android:id="@+id/master"
                            android:layout_width="160dp"
                            android:layout_height="30dp"
                            android:hint="主手"
                            android:textAlignment="center"
                            android:layout_margin="5dp"/>
                </TableRow>
            </TableLayout>
            <LinearLayout
                    android:id="@+id/ll_ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="400dp"
                    android:orientation="horizontal" android:visibility="visible">

                <com.xuexiang.xui.widget.button.ButtonView
                        style="@style/ButtonView.Blue"
                        android:id="@+id/ok"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:text="确定"
                        android:layout_marginLeft="70dp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>